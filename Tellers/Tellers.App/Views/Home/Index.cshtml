@{
    ViewData["Title"] = "Home Page";
}

<div class="px-4 py-1 mt-5 text-center" style="background-color: aliceblue">
    <p class="display-2 fw-bold">Newest stories:</p>
</div>

<partial name="CarouselGalleryPartial" />

<div class="px-4 py-5 my-5 text-center" style="background-color: aliceblue">
    <img class="d-block mx-auto mb-4 rounded-circle border-5" src="~/images/storytelling-icon-simple-element-vector-27270246.jpg" alt="" width="100">
    <h1 class="display-5 fw-bold">We are Tellers</h1>
    <p class="display-5 fw-bold">We share stories</p>
    <div class="col-lg-6 mx-auto">
        <p class="lead mb-4">Just login or sign up for free:</p>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <a asp-controller="User" asp-action="Register" type="button" class="btn btn-primary btn-lg px-4 gap-3">Sign up for free</a>
            <a asp-controller="User" asp-action="Login" type="button" class="btn btn-outline-secondary btn-lg px-4">Sign in</a>
        </div>
    </div>
</div>

<div class="px-4 py-1 mt-5 text-center" style="background-color: aliceblue">
    <p class="display-2 fw-bold">Top stories:</p>
</div>

<partial name="CarouselGalleryPartial" />
