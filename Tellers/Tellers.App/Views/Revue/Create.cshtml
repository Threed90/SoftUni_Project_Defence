@using System.Security.Claims;
@using Tellers.ViewModels.Revues;
@model CreateRevueViewModel

<section style="background-color: #e7effd;">
    <div class="container my-5 py-5 text-dark">
        <div class="row d-flex justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-6">
                <div class="card">
                    <div class="card-body p-4">
                        <div class="d-flex flex-start w-100">
                            <a asp-action="Info" asp-controller="Profile" asp-route-profileId="@User.FindFirstValue(ClaimTypes.NameIdentifier)">
                                <img class="rounded-circle shadow-1-strong me-3"
                                     src="@(string.IsNullOrWhiteSpace(Model.CreatorPictureUrl) == false ? Model.CreatorPictureUrl : "/images/profilePicDefault.png")" alt="avatar" width="65"
                                     height="65" />
                            </a>
                            <form method="post" class="w-100">
                                <div class="w-100">
                                    <h5>Add a revue</h5>
                                    <span class="fa fa-star oneStar"></span>
                                    <span class="fa fa-star twoStar"></span>
                                    <span class="fa fa-star threeStar"></span>
                                    <span class="fa fa-star fourStar"></span>
                                    <span class="fa fa-star fiveStar"></span>
                                    <input id="ratingStar" hidden asp-for="Rating">

                                    <div class="form-outline">
                                        <span asp-validation-for="Text" class="text-danger"></span>
                                        <textarea class="form-control" id="textAreaExample" rows="4" asp-for="Text"></textarea>
                                        <label class="form-label" for="textAreaExample">What is your view?</label>
                                    </div>
                                    <div class="d-flex justify-content-between mt-3">

                                        <button class="btn btn-success" asp-action="Create" asp-controller="Revue" asp-route-storyId="@Model.StoryId">
                                            Post a revue
                                        </button>

                                        <button class="btn btn-danger" asp-action="Read" asp-controller="Story" asp-route-storyId="@Model.StoryId">
                                            Cancel <i class="fa fa-long-arrow-right ms-1"></i>
                                        </button>
                                        @*<button type="button" class="btn btn-success">Post a revue</button>
                                        <button type="button" class="btn btn-danger">
                                        Cancel <i class="fa fa-long-arrow-right ms-1"></i>
                                        </button>*@
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{

    @*functionality for rating are in site.js*@
    <script type="text/javascript">
        addRating();
    </script>

}


@section Styles{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}